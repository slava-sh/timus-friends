{
  "name": "__MSG_appName__",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://acm.timus.ru/*"],
      "js": [
        "scripts/element_observer.js",
        "scripts/common.js",
        "scripts/menu.js"
      ],
      "css": ["styles/button.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://acm.timus.ru/author.aspx?*"],
      "js": [
        "scripts/element_observer.js",
        "scripts/common.js",
        "scripts/author.js",
        "scripts/ranklist.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://acm.timus.ru/ranklist.aspx*",
        "*://acm.timus.ru/search.aspx*"
      ],
      "exclude_matches": ["*://acm.timus.ru/ranklist.aspx?friends*"],
      "js": [
        "scripts/element_observer.js",
        "scripts/common.js",
        "scripts/ranklist.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["*://acm.timus.ru/ranklist.aspx?friends*"],
      "js": [
        "scripts/element_observer.js",
        "scripts/common.js",
        "scripts/friends.js"
      ],
      "css": ["styles/friends.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "_locales/ru/messages.json",
    "_locales/en/messages.json"
  ]
}
